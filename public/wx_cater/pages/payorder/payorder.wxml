<!-- 可用组件：https://mp.weixin.qq.com/debug/wxadoc/dev/component/ -->
<import src="../template/userInfo.wxml" />
<template is="userinfo" data="{{userinfo_box:userinfo_box}}" />
<view class="payorder">
  <navigator url="../useroperation/useroperation?operation=address&pay_type=1">
    <view class="lxr" wx:if="{{cater_type == 2}}">
      <text>收货地址</text>
      <view wx:if="{{default_address != ''}}">{{default_address.province}}{{default_address.city}}{{default_address.country}}{{default_address.address}}{{default_address.house_number}}</view>
      <view wx:else>请选择地址</view>
    </view>
  </navigator>
  <view class="orderList">
    <view class="time">
      菜品列表
    </view>
    <view class="orderList-item">
      <view class="orderList-item-top">
        <text>菜品</text>
        <text>数量</text>
        <text>金额</text>
      </view>
      <view class="orderList-item-one" wx:for="{{ goods }}">
        <text>{{ item.good_name }}</text>
        <text>{{ item.number }}</text>
        <text style="color:red">￥{{ item.money }}</text>
      </view>
    </view>
    <view class="bottom">
      <text>总价</text>
      <text style="color:red">￥{{allMoney }}</text>
    </view>
  </view>
  <view class="lxr" wx:if="{{cater_type == 2}}">
    <text>配送费</text>
    <view style="color:red">￥{{shop_info.shipping_fee}}</view>
  </view>
  <view class="lxr" wx:if="{{cater_type == 2}}">
    <text>包装费</text>
    <view style="color:red">￥{{shop_info.package_fee}}</view>
  </view>
  <view class="lxr">
    <text>备注</text>
    <input value="" placeholder="口味偏好等要求" />
  </view>
  <button type="primary" style="position:fixed;bottom:20rpx;width:90%;">付款</button>
</view>