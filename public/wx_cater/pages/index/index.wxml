  <view class="o-top">
    <image class="o-top-img" src="{{url}}{{shop_info.logo}}"></image>
    <view class="o-top-name">
      <text>{{shop_info.name}}</text>
      <text>{{shop_info.introduce}}</text>
      <!-- <view style="visibility:hidden;">占位符</view> -->
    </view>
    <view class="restaurant-info">
      <view bindtap="openLocation" data-latitude="{{ shop_info.latitude }}" data-longitude="{{ shop_info.longitude }}" class="r-i-address iconfont icon-icglobaltitlebar48iconfontmap" style="">
        {{ shop_info.provinve }}{{ shop_info.city }}{{ shop_info.area }}{{ shop_info.address }}
      </view> 
      <icon bindtap="callPhone" data-phone="{{ shop_info.phone }}" class="r-i-tel iconfont icon-dianhua" style=""/>
